{
	"siteName"        : "Default Site",
	"pageNamePostfix" : "Gemeente Amsterdam",
	
	// Used in places where express variable `fullHost` is unavailable or
	// unfit for use.
	"domainName"      : "www.amsterdam.nl",
	// Used to display an email address to end-users on the site.
	"emailAddress"    : "info@amsterdam.nl",
	
	"infoUrls": {},
	
	"debug"    : false,
	"locale"   : "nl",
	"logging"  : "app:*,-app:db:query",
	"timeZone" : "Europe/Amsterdam",
	
	"database": {
		"dialect"            : "mysql",
		"host"               : "localhost",
		"user"               : "",
		"password"           : "",
		"database"           : "",
		"multipleStatements" : true
	},
	"express": {
		"port": 8082,
		"rendering": {
			// Template directories to fall back on when `html/${siteId}/pageName`
			// does not exist.
			"templateDirs": ["html/appName"],
			// Global variables always available in all nunjucks template files.
			// Accessible through `{{GLOBALS.propertyName}}` inside the template.
			"globals" : {}
		},
		"middleware": {
			// Middleware/routes to load before the security middleware is
			// loaded. This is because some middleware don't work well with
			// CSRF protection.
			"beforeSecurity": [],
			// Middleware/routes to load after the security middleware is
			// loaded.
			"afterSecurity": []
		}
	},
	"sentry": {
		"active" : true,
		"url"    : null
	},
	
	"mail": {
		"from": "from@localhost",
		"method": "smtp",
		
		"transport": {
			"smtp": {
				"pool": false,
				"direct": false,
				"port": 465,
				"host": "smtp.sendgrid.net",
				"requireSSL": true,
				"name": "Sengrid",
				"auth": {
					"user": "apikey",
					"pass": "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"
				}
			}

		}
	},
	
	"security": {
		"passwordHashing": {
			"currentMethod": "bcrypt",
			"methods": {
				"bcrypt": {
					"method" : "bcrypt",
					"cost"   : 10
				}
			}
		},
		"authorization": {
			// Which folder to load in `src/auth/roles`. This folder should have
			// an `index.js` which exports a `Roleplay` instance that loads
			// all relevant roles for this application.
			"roles": "appName"
		},
		"sessions": {
			"onlySecure"   : true,
			"secret"       : "e56789!ouAr-/t8ewHDyer90_",
			// Default cookie is browser-session maxAge. This TTL is for logged in session
			// cookies only.
			"cookieTTL"    : 15768000000,
			// Login token TTL in ms (default: 48hrs). These tokens are created when a user
			// wants to log in and enters their email address.
			"tokenTTL"     : 172800000,
			// Property name to store user ID in `req.session`.
			"uidProperty"  : "userId",
			// Cached user instance TTL in seconds.
			"userCacheTTL" : 3600
		}
	},
	
	"notifications": {
		"admin": {
			// Special high-frequency email notifications for site administrators.
			// Should probably not be a personal email account.
			"emailAddress": null
		}
	},
	
	"ideas": {
		// Running duration in days.
		"duration": 90,
		// When an idea is closed, this threshold must be met or the idea
		// will be automatically denied.
		"minimumYesVotes": 100,
		// Threshold in days after which votes are anonimized (IP removed).
		// Votes that are earmarked as fraudulous are never anonimized.
		"anonimizeThreshold": 180,
		// Minimum number of votes before it influences the date sorting of
		// and idea's arguments.

		"argumentVoteThreshold": 0,
    "location": {
			// Is location a mandatory field
      "isMandatory": false
    }
	},
	
	"polls": {
		"maxChoices": 3,
		"argumentVoteThreshold": 0
	}
