{
	"debug"    : false,
	"logging"  : "app:*,-app:db:query",
	"timeZone" : "Europe/Amsterdam",
	
	"database": {
		"dialect"            : "mysql",
		"host"               : "localhost",
		"user"               : "",
		"password"           : "",
		"database"           : "",
		"multipleStatements" : true
	},
	"express": {
		"port": 8082
	},
	
	"mail": {
		"from": "from@localhost",
		"transport": {
			"pool"       : false,
			"direct"     : false,
			
			"port"       : 587,
			"host"       : "smtp.host.name",
			"requireTLS" : true,
			
			"name"       : "host.name",
			"auth"       : {
				"user": "user",
				"pass": "pass"
			}
		}
	},
	
	"security": {
		"passwordHashing": {
			"currentMethod": "bcrypt",
			"methods": {
				"bcrypt": {
					"method" : "bcrypt",
					"cost"   : 10
				}
			}
		},
		"sessions": {
			"secret"      : "e56789!ouAr-/t8ewHDyer90_",
			// Login token TTL in ms.
			"tokenTTL"    : 3600000,
			// Property name to store user ID in `req.session`.
			"uidProperty" : "userId"
		}
	},
	
	"ideas": {
		// When an idea is closed, this threshold must be met or the idea
		// will be automatically denied.
		"minimumYesVotes": 100
	}
}