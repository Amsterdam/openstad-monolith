{
	"express": {
		"rendering": {
			"templateDirs": ["html/stemtool"],
			"globals": {
				"projectPage" : "https://www.amsterdam.nl/"
			}
		},
		"middleware": {
			"beforeSecurity": [
				"./routes/media_get"
			],
			"afterSecurity": [
				"./middleware/log",
				"./routes/stemtool/default",
				"./routes/stemtool/vote",
				"./routes/stemtool/arg",
				"./routes/stemtool/newsletter",
				"./routes/stemtool/logout",
				"./routes/dev",
				"./routes/stemvan/idea",

			]
		}
	},

	"security": {
		"authorization": {
			"roles": "stemtool"
		}
	}
}
