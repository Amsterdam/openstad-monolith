{% extends '../base.njk' %}

{% set pageTitle = 'Nieuw idee' %}

{% block content %}
<h1>Nieuw idee</h1>

<form method="post">
	Titel: <input type="text" name="title" value="{{idea.title}}"><br>
	
	Samenvatting:<br>
	<textarea name="summary">{{idea.summary}}</textarea><br>
	
	Beschrijving:<br>
	<textarea name="description">{{idea.description}}</textarea><br>
	
	{% if idea %}
	<input type="hidden" name="id" value="{{idea.id}}">
	<input type="hidden" name="_method" value="PUT">
	{% endif %}
	<input type="hidden" name="_csrf" value="{{csrfToken}}">
	
	<input type="submit" name="Opslaan">
</form>
{% endblock %}