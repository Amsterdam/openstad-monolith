{% extends '../ideas.njk' %}
{% import '../includes/content.njk' as content %}

{% set pageTitle    = 'Idee: '+idea.title %}
{% set contentClass = 'idea' %}

{% block head %}
	{{ super() }}
	<meta property="og:title" content="{{idea.title}}">
	<meta property="og:type" content="website">
	<meta property="og:description" content="{{idea.summary}}">
	<meta property="og:locale" content="nl_NL">
	<meta property="og:site_name" content="De Stem van West">
	{% if idea.posterImage %}
		<meta property="og:image" content="/image/{{idea.posterImage.key}}">
	{% endif %}
{% endblock %}

{% block quickNav %}
	<a href="/plannen" id="backToList">Terug naar het overzicht</a>
{% endblock %}

{% block content %}
	<div id="title">
		<div>
			<div class="primary">
				{% if idea.posterImage %}
					<div class="image" style="background-image: url('/image/{{idea.posterImage.key}}');"></div>
				{% elif idea.location %}
					<div class="image" style="background-image: url(
						'https://maps.googleapis.com/maps/api/streetview?size=1400x700&location={{idea.location.coordinates[0]}},{{idea.location.coordinates[1]}}&heading=151.78&key=AIzaSyCrp_kqFQoKEaW5DOEBVjAu61cRl3-T0Lg'
					);"></div>
				{% else %}
					<div class="image"></div>
				{% endif %}
			</div>
			
			<div class="secondary">
				<div class="controls">
					<h2>Stemmen</h2>
					
					<div class="vote">
					{% if idea.isOpen() %}
						<form method="POST" action="/plan/{{idea.id}}/vote">
							<input type="hidden" name="_csrf" value="{{csrfToken}}">
							<button class="{{'selected' if userVote.opinion == 'yes'}}" type="submit" name="opinion" value="yes" data-count="{{idea.yes}}">
								voor
							</button>
							<button class="{{'selected' if userVote.opinion == 'no'}}" type="submit" name="opinion" value="no" data-count="{{idea.no}}">
								tegen
							</button>
						</form>
					{% else %}
						<button disabled value="yes" data-count="{{idea.yes}}">voor</button>
						<button disabled value="no" data-count="{{idea.no}}">tegen</button>
					{% endif %}
					</div>
					
					<div class="ideaProgress">
						<div class="progress"><div class="bar" style="width: {{idea.progress}}%;"></div></div>
					</div>
					
				{% if idea.status == 'ACCEPTED' %}
					<div><em>Dit plan wordt besproken in de volgende vergadering!</em></div>
				{% elif idea.isOpen() %}
					<div class="duration">Nog {{idea.duration | duration}} om te stemmen.</div>
				{% else %}
					<div><em>Stemmen op dit idee is niet meer mogelijk.</em></div>
				{% endif %}
					
					<ul class="share">
						<li><a class="facebook" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{url}}">Facebook</a>
						<li><a class="twitter"  target="_blank" href="https://twitter.com/home?status={{url}}">Twitter</a>
						<li><a class="email"    target="_blank" href="mailto:?subject={{'Idee voor West: '+idea.title | urlencode}}&body={{url | urlencode}}">Email</a>
					</ul>
				</div>
			</div>
		</div>
	</div>
	
	<div class="primary">
		<h1>{{idea.title}}</h1>
		
		<div id="author">
		{% if can('user:mail') %}
			Door <strong><a href="mailto:{{idea.user.email}}">
				{{idea.user.firstName}} {{idea.user.lastName}}
			</a></strong><br>
		{% else %}
			Door <strong>{{idea.user.firstName}} {{idea.user.lastName}}</strong><br>
		{% endif %}
			
			{{idea.startDate | date('LL')}}
		</div>
		
		{{ modBreak() if idea.modBreak and not idea.isOpen() }}
		
		<div class="userContent">
			<p class="summary">
				<strong>{{idea.summary | nl2br}}</strong>
			</p>
			
			{{idea.description | safe}}
		</div>
		
		{% if idea.location %}
		<h2>Locatie</h2>
		{{content.map(cookieConsent)}}
		{% endif %}
		
		{{ modBreak() if idea.modBreak and idea.isOpen() }}
	</div> <!-- #primary -->
	
	<div class="secondary">
		{# <h2>Volgen</h2>
		
		<form action="/plan/{{idea.id}}/notify">
			<input type="submit" value="Mail updates">
		</form> #}
		
		{% if can('idea:edit', 'idea:delete') %}
			<h2>Bewerken</h2>
			
			{% if can('idea:edit') %}
				<form action="/plan/{{idea.id}}/edit">
					<button type="submit" class="edit">Bewerk idee</button>
				</form>
			{% endif %}
			
			{% if can('idea:delete') %}
				<form method="POST" action="/plan/{{idea.id}}/delete" id="deleteIdea">
					<input type="hidden" name="_method" value="DELETE">
					<input type="hidden" name="_csrf" value="{{csrfToken}}">
					<button type="submit" class="delete">Verwijder idee</button>
				</form>
			{% endif %}
		{% endif %}
		
		{% if can('idea:admin') %}
			<h2>Beheren</h2>
			
			<form method="POST" action="/plan/{{idea.id}}/status">
				<select name="status" onchange="this.form.submit();">
					<option {{'selected' if idea.status=='OPEN'}}     value="OPEN">    Status: Open</option>
					<option {{'selected' if idea.status=='CLOSED'}}   value="CLOSED">  Status: Gesloten</option>
					<option {{'selected' if idea.status=='DENIED'}}   value="DENIED">  Status: Afgewezen</option>
					<option {{'selected' if idea.status=='ACCEPTED'}} value="ACCEPTED">Status: Wordt besproken</option>
					<option {{'selected' if idea.status=='BUSY'}}     value="BUSY">    Status: In behandeling</option>
					<option {{'selected' if idea.status=='DONE'}}     value="DONE">    Status: Afgerond</option>
				</select>
				<input type="hidden" name="_method" value="PUT">
				<input type="hidden" name="_csrf" value="{{csrfToken}}">
			</form>
			
			<form method="GET" action="/plan/{{idea.id}}/mod_break">
				<button type="submit" class="modBreak">Moderator reactie</button>
			</form>
		{% endif %}
	</div>
	
	<div id="arguments">
		<h1>Argumenten</h1>
		
		{{argList('for', idea.argumentsFor)}}
		{{argList('against', idea.argumentsAgainst)}}
	</div>
{% endblock %}

{% block footer %}
	{{ super() }}
	
	<script>
		// First image in content
		// ----------------------
		// If the content starts with an image, remove it from the content
		// since it's already visible as poster image.
		var figure = document.querySelector('.userContent figure:first-child');
		if( figure ) {
			var parent = figure.parentNode;
			if( parent.firstChild === figure ) {
				parent.removeChild(figure);
			}
		}
	</script>
	<script>
		// Delete idea confirmation
		// ------------------------
		var form = document.getElementById('deleteIdea');
		if( form ) {
			form.addEventListener('submit', function( event ) {
				var msg = 'Let op! Je staat op het punt je voorstel te verwijderen. '+
				          'Dit kan niet ongedaan gemaakt worden.\n\n'+
				          'Weet je het zeker?';
				if( !confirm(msg) ) {
					event.preventDefault();
				}
			});
		}
	</script>
	<script>
		// Disabled textareas
		// ------------------
		// Link to login/register page.
		var textareas = Array.prototype.slice.call(
			document.querySelectorAll('#arguments textarea[data-disabled]'), 0
		);
		textareas.forEach(function( textarea ) {
			textarea.addEventListener('focus', function( event ) {
				textarea.blur();
				document.location.href = '/plan/{{idea.id}}/arg/new';
			})
		});
		
		// Character count on textareas
		// ----------------------------
		var minLen     = 140;
		var maxLen     = 500;
		var textareas  = Array.prototype.slice.call(
			document.querySelectorAll('#arguments textarea'), 0
		);
		var charsLefts = document.querySelectorAll('#arguments textarea ~ div.charsLeft');
		var buttons    = document.querySelectorAll('#arguments textarea ~ input[type="submit"]');
		
		textareas.forEach(function( textarea, i ) {
			var charsLeft = charsLefts[i];
			var button    = buttons[i];
			var msg       = {
				min: charsLeft.querySelector('div.min'),
				max: charsLeft.querySelector('div.max')
			};
			var span      = {
				min: msg.min.querySelector('span'),
				max: msg.max.querySelector('span')
			};
			
			validate();
			
			textarea.addEventListener('focus', function( event ) {
				charsLeft.className += ' visible';
			});
			textarea.addEventListener('blur', function( event ) {
				charsLeft.className = charsLeft.className.replace(' visible', '');
			});
			
			textarea.addEventListener('keydown', function( event ) {
				// Prevent input when maximum is reached.
				if( textarea.value.length == maxLen ) {
					switch( event.key.toLowerCase() ) {
						case 'delete'    : case 'backspace':
						case 'arrowdown' : case 'arrowup':
						case 'arrowleft' : case 'arrowright':
							return;
						default:
							event.preventDefault();
					}
				}
			});
			textarea.addEventListener('keyup', function() {
				if( textarea.value.length > maxLen ) {
					textarea.value = textarea.value.substr(0, maxLen);
				}
				validate();
			});
			
			function validate() {
				updateCharsLeft();
				updateButton();
			}
			function updateCharsLeft() {
				var len     = textarea.value.length;
				var enable  = len < minLen ? 'min' : 'max';
				var disable = enable == 'max' ? 'min' : 'max';
				var chars   = len < minLen ?
				              minLen - len :
				              maxLen - len;
				
				msg[enable].className  = enable+' visible';
				msg[disable].className = disable;
				span[enable].innerHTML = chars;
			}
			function updateButton() {
				var len = textarea.value.length;
				var isValid = len >= minLen && len <= maxLen;
				button.disabled = !isValid;
			}
		});
		
		// Delete confirmation for arguments
		// ---------------------------------
		var forms = Array.prototype.slice.call(
			document.querySelectorAll('#arguments .argument form.delete'), 0
		);
		forms.forEach(function( form ) {
			form.addEventListener('submit', function( event ) {
				var msg = 'Let op! Je staat op het punt je argument te verwijderen. '+
				          'Dit kan niet ongedaan gemaakt worden.\n\n'+
				          'Weet je het zeker?';
				if( !confirm(msg) ) {
					event.preventDefault();
				}
			});
		});
	</script>
	
	{% if idea.location %}
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCauwsJ_4I3ri0rI-O5-82ncLLO_Cji8YY"></script>
	<script src="/js/map.js"></script>
	<script>
		// Google map
		// ----------
		var point  = JSON.parse('{{idea.location | dump | safe}}' || null);
		var latLng = {lat: point.coordinates[0], lng: point.coordinates[1]};
		var map    = initMap(document.getElementById('map'), {
			center      : latLng,
			zoom        : 14,
			zoomControl : true,
			scrollwheel : false
		});
		var marker = initMarker({
			position : latLng,
			map      : map
		});
	</script>
	{% endif %}
{% endblock %}

{% macro modBreak() %}
	<div id="modBreak">
		<b>De Stem van West</b> &nbsp;&nbsp;|&nbsp;&nbsp; {{idea.modBreakDate | date('LLL')}}<br>
		<p>
		{{idea.modBreak | safe | nl2br}}
		</p>
	</div>
{% endmacro %}

{% macro argList( sentiment, arguments ) %}
	<div class="argList {{sentiment}}">
	{% if can('arg:form') %}
		<form method="POST" action="/plan/{{idea.id}}/arg/new" class="newArgument">
			<textarea
				name="description"
				placeholder="{{'Ik ben voor, want...' if sentiment == 'for' else 'Ik ben tegen, want...'}}"
				{{'data-disabled readonly' if not can('arg:add')}}
			></textarea>
			
			<div class="charsLeft">
				<div class="min">Nog minimaal <span>140</span> tekens.</div>
				<div class="max"><span>360</span> tekens resterend.</div>
			</div>
			
			<input type="hidden" name="_csrf" value="{{csrfToken}}">
			<input type="hidden" name="sentiment" value="{{sentiment}}">
			<input type="submit" value="Verzenden">
		</form>
	{% else %}
		<h2>{{'Ik ben voor, want...' if sentiment == 'for' else 'Ik ben tegen, want...'}}</h2>
	{% endif %}
	
	{% for arg in arguments %}
		<div class="argument">
			<div class="user">
				<strong>
				{% if can('user:mail') %}
					<a href="mailto:{{arg.user.email}}">{{arg.user.firstName}} {{arg.user.lastName}}</a>
				{% else %}
					{{arg.user.firstName}} {{arg.user.lastName}}
				{% endif %}
				</strong>
				&nbsp;&nbsp;|&nbsp;&nbsp;
				{{arg.createdAt | date('LLL')}}
				
				{% if user.can('arg:edit', idea, arg) %}
					<form class="action" method="GET" action="/plan/{{idea.id}}/arg/{{arg.id}}/edit">
						<input type="submit" class="default edit" value="bewerken" title="Argument bewerken">
					</form>
				{% endif %}
				{% if user.can('arg:delete', idea, arg) %}
					<form class="action delete" method="POST" action="/plan/{{idea.id}}/arg/{{arg.id}}/delete">
						<input type="hidden" name="_method" value="DELETE">
						<input type="hidden" name="_csrf" value="{{csrfToken}}">
						<input type="submit" class="default delete" value="verwijderen" title="Argument verwijderen">
					</form>
				{% endif %}
			</div>
			
			<p>{{arg.description | urlize | nl2br | safe}}</p>
			
			{% if user.can('arg:reply', arg) %}
				<a href="/plan/{{idea.id}}/arg/{{arg.id}}/reply" class="reply">Reageren</a>
			{% endif %}
		</div>
	{% else %}
		<div class="noArguments">
		{% if can('arg:add') %}
			Heb je een goed argument {{'voor' if sentiment == 'for' else 'tegen'}}?
			Laat je stem horen!
		{% else %}
			Nog geen argumenten {{'voor' if sentiment == 'for' else 'tegen'}}.
		{% endif %}
		</div>
	{% endfor %}
	</div>
{% endmacro %}