{# 
	This template contains macros that render secondary content.
	Most of these end up in #content > #secondary, but that's not
	required. The speech bubble for example is also used in #primary.
#}

{% macro speechBubble() %}
	<span class="speechBubble">
		&ldquo;Heb jij een idee voor je buurt in Amsterdam West?
		<a href="/idea/new">Ik heb een plan!</a>
	</span>
{% endmacro %}

{% macro highlightedIdeas( ideas ) %}
	<div id="highlightedIdeas">
		<h2>Campagnes</h2>
		<ul>
		{% for idea in ideas %}
			<li>
				<a href="/idea/{{idea.id}}">{{idea.title}}</a>
				<div class="ideaStats">
					<div class="count yes">{{idea.yes}}</div>
					<div class="count no">{{idea.no}}</div>
					<div class="count arguments">{{idea.argCount}}</div>
				</div>
			</li>
		{% endfor %}
		</ul>
	</div>
{% endmacro %}

{% macro agenda( meetings ) %}
	<div id="agenda">
		<h2>Agenda</h2>
		Het Algemeen Bestuur vergadert elke 2 weken. In elke vergadering wordt
		het bewonersidee besproken dat in 4 weken tijd de meeste stemmen heeft
		gekregen.
		
		<div class="timeline">
		{% for meeting in meetings %}
			{# White space sensitive tags because of `inline-block` #}
			<div class="point"></div><div class="date">
				{{meeting.date | date('D MMMM')}} <strong>{{meeting.date | date('YYYY')}}</strong>
			</div>
		{% endfor %}
		</div>
	</div>
{% endmacro %}