{% extends 'ideas.njk' %}
{% set pageTitle = 'Vul postcode in' %}

{% block content %}
	<div class="postcodecheck">

		<h1>Vul je postcode in</h1>

		Vul je postcode in om je stem uit te brengen.
		<p>

			<form method="post">
				<h4>Postcode</h4>
				<input type="text" name="zipCode" value="{{zipCode}}" autofocus>
				<input type="submit" value="Stemmen">
				<input type="hidden" name="opinion" value="{{opinion}}">
				<input type="hidden" name="_csrf" value="{{csrfToken}}">
			</form>

	</div>
{% endblock %}
