{% extends 'base.njk' %}
{% import 'includes/secondary.njk' as sec %}

{% set contentClass = 'index' %}

{% block content %}
	<div id="banner">
		<div class="image" style="background-image: url('/img/home_banner.jpg');"></div>
		<div class="text">
						<h2>Welkom op de Stem van Noord</h2>
			<p>
				Dit is jouw online meeting point voor het indienen van voorstellen voor je buurt.
				Na de gemeenteraadsverkiezingen op 21 maart 2018 is het Algemeen Bestuur opgevolgd
				door een stadsdeelcommissie. Hou deze site in de gaten om te zien wat dat betekent
				voor plannen op {{SITENAME}}.
			</p>
		</div>
	</div>
	
	<div class="primary">
		{{sec.newIdeaBubble()}}
		
		{# Syntax formatting because `div.tile` is `display: inline-block`. #}
		{% for article in articles
		%}<div class="tile">
			<a href="/artikel/{{article.id}}">
						{% if article.posterImage %}
				<div class="image" style="background-image: url('/image/{{article.posterImage.key}}');"></div>
			{% else %}
				<div class="image" style="background-image: url('/img/articles/{{article.id}}/{{article.image or 'thumbnail.jpg'}}');"></div>
			{% endif %}
			<h3>{{article.title}}</h3>
			{{article.summary}}
			</a>
			
			<a href="/artikel/{{article.id}}" class="readMore">Lees meer</a>
		</div>{%
		endfor %}
	</div>
	
	<div class="secondary">
		{{sec.newIdeaBubble()}}
		
		{% if can('article:create') %}
			<h2>Acties</h2>
			
			<form action="/article/create">
				<button type="submit" class="edit">Nieuw artikel</button>
			</form>
		{% endif %}
		
		{{sec.highlightedIdeas(highlightedIdeas)}}
		
		{{sec.agenda(upcomingMeetings)}}
	</div>
{% endblock %}