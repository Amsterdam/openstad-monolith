{% macro argumentsForm(options, nickName, zipCode, csrfToken) %}


  <div class="arguments-cta-box">

    <div class="col-container">
      <div class="col-2">
        <img class="arguments-icon" src="/img/stemtool/comments.svg" />
      </div>

      <div class="col-10">
        <div class="speech-balloon">
          <h3 class="margin-0">
            Wil je meepraten over de varianten? <br class="hidden-xs" /> Laat dan hier weten wat je ervan vindt!
          </h3>
        </div>
      </div>
    </div>

    <br />

    <div class="box-grey">
      <form id="new-argument-form" method="POST" action="/arg/new" class="newArgument clearfix ">
        <div>
          Ik ben

          <span class="select-wrapper">
            <select name="sentiment"  class="select for-or-against-selector">
              <option value="for">Voor</option>
              <option value="against">Tegen</option>
            </select>
          </span>

          <span class="select-wrapper">
            <select name="label" class="argument-textarea variant-selector">
            {% for option in options %}
              <option value="{{option.order}}">{{option.order}}: {{option.title}}</option>
            {% endfor %}
            </select>
          </span>

          want...
        </div>
        <textarea
          class="textarea margin-hor-s block argument-textarea"
          name="description"
          placeholder="Ik ben voor variant A, want..."
        ></textarea>

        <div class="charsLeft margin-bottom-s">
          <div class="min">Nog minimaal <span>30</span> tekens.</div>
          <div class="max"><span>360</span> tekens resterend.</div>
        </div>

        <div class="col-container">
          <div class="col-7 col-xs-12">
            {% if not nickName %}
            <br class="visible-xs" />

            <div class="form-field-container validate-text-required  ">
               Naam: <br />

               <div class="label-error margin-hor-xs">
                   Je hebt geen naam opgegeven.
               </div>

              <input type="text" name="nickName" class="input-field stretch">
            </div>
            {% endif %}
            &nbsp;
          </div>
          <div class="col-5 col-xs-12">
          {% if not zipCode %}
            <div class="form-field-container validate-postcode margin-top-m" >
               Postcode: <br />

               <div class="label-error margin-hor-xs">
                   Een geldige postcode is vereist.
               </div>

              <input type="text" name="zipCode" class="input-field stretch">
            </div>
            {% endif %}
            <br class="clearfix" />
            <input type="submit" class="pull-right btn btn-primary btn--stretch stretch" value="Verzenden" />
          </div>
        </div>

        <input type="hidden" name="_csrf" value="{{csrfToken}}">
      </form>
    </div>
  </div>
{% endmacro %}
