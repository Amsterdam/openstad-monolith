{% extends 'base.njk' %}

{% set pageTitle = 'Aanmelden' %}
{% set contentClass = 'register' %}

{% block content %}
{% if not user.isLoggedIn() %}
	<div id="register">


	<div id="login">
		<h1>Ik ben al lid</h1>

		<p>
			Je ontvangt per email een link waarmee je direct kunt inloggen.
			Hierna ben je gelijk ingelogd voor 6 maanden of totdat je uitlogt.
		</p>

		<form method="post" action="/account/login_email?ref={{ref}}">
			<label><b>Emailadres</b> <input type="email" name="email" value="{{email_login}}" placeholder="naam@adres.nl"></label>

			<input type="hidden" name="_csrf" value="{{csrfToken}}">
			<input type="submit" value="Inloggen">
		</form>
		<hr>

	</div>

{% endif %}
{% endblock %}
