<!DOCTYPE html>
<html lang="nl">
<head>
	<meta charset="UTF-8">
	<link rel="icon" type="image/x-icon" href="/img/favicon.ico" />
	
	<title>{{pageTitle or 'Home'}} — De Stem van West — Gemeente Amsterdam</title>
	
	<meta name="viewport" content="initial-scale=1">
	{% block head %}
	<link rel="stylesheet" type="text/css" href="/css/all.css">
	{% endblock %}
</head>
<body class="preload">
	<div id="page">
		<header>
			<img src="/img/andreas.svg" width="24" alt=""/>
			<div id="amsterdam">
				Gemeente<br>
				Amsterdam
			</div>
			
			<h1>De Stem van West</h1>
			
			<nav id="superMenu">
			
			</nav>
			
			<nav id="mainMenu" role="navigation" class="menuBar">
				<ul>
					<li class="{{'active' if activeMenu == 'home' or not activeMenu}}"><a href="/">Home</a>
					<li class="{{'active' if activeMenu == 'about'}}"><a href="/algemeen-bestuur" title="Algemeen bestuur"></a>
					<li class="{{'active' if activeMenu == 'ideas'}}"><a href="/ideas">Plannen</a>
				</ul>
			</nav>
			
			<nav id="quick">
				{% block quickNav %}{% endblock %}
				
				<div id="auth">
				{% if user.isLoggedIn() %}
					<a href="/account/logout">Uitloggen</a>
					<span>{{'('+user.fullName+')' if user.hasCompletedRegistration()}}</span>
				{% else %}
					<a href="/account/register">Aanmelden</a>
				{% endif %}
				</div>
			</nav>
		</header>
		
		<div id="content" class="{{contentClass}}">
			{% for type,list in messages %}
				<div class="flashMessage {{type}}">
					{% if type == 'error' %}
						<h2>Er ging iets fout</h2>
						<ul>
							{% for message in list %}<li>{{message}}{% endfor %}
						</ul>
					{% elif type == 'success' %}
						<h2>Gelukt!</h2>
						{% for message in list %}{{message}}<br>{% endfor %}
					{% elif type == 'include' %}
						{% for file in list %}
							{% include file %}
						{% endfor %}
					{% else %}
						<h2>Informatie</h2>
						{% for message in list %}{{message}}<br>{% endfor %}
					{% endif %}
					
					<a class="close"><img src="/img/close.svg" alt="" title="Melding sluiten"></a>
				</div>
			{% endfor %}
			
			{% block content %}
				Standaard pagina.
			{% endblock %}
		</div>
		
		{% block footer %}
		<footer>
			<nav class="menuBar"></nav>
			
			<div>
				<div>
					<h2>Over deze site</h2>
					<ul>
						<li><a href="/veelgestelde-vragen">Veelgestelde vragen</a></li>
						<li><a href="/proclaimer">Proclaimer</a></li>
					</ul>
				</div
				><div>
					<h2>Contact</h2>
					<p>
						Het antwoord op je vraag niet bij ‘Veelgestelde vragen’ kunnen
						vinden? Email de Stem van West.
					</p>
					<ul>
						<li><a href="mailto:stemvanwest@amsterdam.nl">Email De Stem van West</a></li>
					</ul>
				</div
				><div>
					<h2>Volg het stadsdeel</h2>
					<ul>
						<li><a href="https://www.amsterdam.nl/bestuur-organisatie/bestuurscommissies/bestuurscommissie-w/" target="_blank">Algemeen Bestuur West</a></li>
						<li><a href="https://www.facebook.com/stadsdeelwest/" target="_blank">Facebook</a></li>
						<li><a href="https://twitter.com/020west" target="_blank">Twitter</a></li>
					</ul>
				</div
				><div>
					<h2>Feedback</h2>
					<p>
						Heb je een opmerking over het gebruik of de werking van deze
						site? Wij ontvangen graag jouw feedback!
					</p>
					<ul>
						<li><a href="mailto:stemvanwest@amsterdam.nl">Stuur feedback</a></li>
					</ul>
				</div
				><div>
					
				</div>
			</div>
		</footer>
		{% endblock %}
	</div>
	
	<script>
		// Preload class is defined in `all.less` to disable all animations.
		document.body.className = '';
	</script>
	<script>
		// Flash messages
		// --------------
		// Make close buttons interactive.
		var closeButtons = Array.prototype.slice.call(
			document.querySelectorAll('#content > .flashMessage a:not([href])'), 0
		);
		closeButtons.forEach(function( a ) {
			a.href = '';
			a.addEventListener('click', function( event ) {
				var message = a.parentNode;
				message.parentNode.removeChild(message);
				event.preventDefault();
			});
		});
	</script>
	{% if ENV == 'production' %}
	<script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

	  ga('create', 'UA-91300660-1', 'auto');
	  ga('send', 'pageview');

	</script>
	{% endif %}
</body>
</html>