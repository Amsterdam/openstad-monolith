<!DOCTYPE html>
<html>
<head>
	<title>{{pageTitle or 'Home'}} - Gemeente Amsterdam</title>
	
	{% block head %}
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<link rel="stylesheet" type="text/css" href="/css/ideas.css">
	{% endblock %}
</head>
<body>
	<ul id="menu">
		<li><a href="/">Home</a></li>
		<li><a href="/ideas">IdeeÃ«n</a></li>
		<li><a href="/about">Over AB</a></li>
		<li>
			<a href="/account/{{'logout' if user.isLoggedIn() else 'login_email'}}">
			{{'Uitloggen' if user.isLoggedIn() else 'Inloggen'}}</a>
			{{'('+user.fullName+')' if user.hasCompletedRegistration()}}
		</li>
		{% if not user.isLoggedIn() and user.can('account:register') %}
		<li><a href="/account/register">Registreren</a></li>
		{% endif %}
	</ul>
	
	<div id="content" class="{{contentClass}}">
		{% for type,list in messages %}
			{% for message in list %}
				<div class="flashMessage {{type}}">
					{{message}}
					<div onclick="location.reload()">x</div>
				</div>
			{% endfor %}
		{% endfor %}
		
		{% block content %}
			Standaard pagina.
		{% endblock %}
	</div>
	
	{% block footer %}
	{% endblock %}
</body>
</html>