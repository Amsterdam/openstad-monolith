<!DOCTYPE html>
<html lang="nl">
<head>
	<title>{{pageTitle or 'Home'}} - Gemeente Amsterdam</title>
	
	{% block head %}
	<link rel="stylesheet" type="text/css" href="/css/fonts.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<link rel="stylesheet" type="text/css" href="/css/ideas.css">
	{% endblock %}
</head>
<body>
	<div id="page">
		<!--<ul id="menu">
			
			<li>
				
			</li>
			{% if not user.isLoggedIn() and user.can('account:register') %}
			<li><a href="/account/register">Registreren</a></li>
			{% endif %}
		</ul>-->
		<header>
			<figure>
				<img src="/img/andreas.svg" alt=""/>
				<figcaption>
					Gemeente<br>
					Amsterdam
				</figcaption>
			</figure>
			
			<h1>Algemeen Bestuur West</h1>
			
			<nav id="mainMenu">
			
			</nav>
			
			<nav role="navigation" class="menuBar">
				<ul>
					<li  class="{{'active' if activeMenu == 'home' or not activeMenu}}"><a href="/">Home</a></li
					><li class="{{'active' if activeMenu == 'about'}}"><a href="/about">Het AB</a></li
					><li class="{{'active' if activeMenu == 'ideas'}}"><a href="/ideas">Mijn plan</a></li>
				</ul>
			</nav>
			
			<nav id="quick">
				<div id="auth">
				&gt;
				{% if user.isLoggedIn() %}
					<a href="/account/logout">Uitloggen</a>
					{{'('+user.fullName+')' if user.hasCompletedRegistration()}}
				{% else %}
					<a href="/account/login_email">Inloggen</a>
				{% endif %}
				</div>
			</nav>
		</header>
		
		<div id="content" class="{{contentClass}}">
			{% for type,list in messages %}
				{% for message in list %}
					<div class="flashMessage {{type}}">
						{{message}}
						<div onclick="location.reload()">x</div>
					</div>
				{% endfor %}
			{% endfor %}
			
			{% block content %}
				Standaard pagina.
			{% endblock %}
		</div>
		
		{% block footer %}
		<footer>
			<nav class="menuBar"></nav>
			
			<div>
				<div>
					<h2>Contact</h2>
					<ul>
						<li>Email bestuurscommissie</li>
						<li>Email ondersteuning dagelijks bestuur</li>
					</ul>
				</div
				><div>
					<h2>Privacy</h2>
					<ul>
						<li>Privacy statement</li>
						<li>Cookies</li>
					</ul>
				</div
				><div>
					<h2>Over deze site</h2>
					<ul>
						<li>Veelgestelde vragen</li>
						<li>Proclaimer</li>
					</ul>
				</div
				><div>
					
				</div>
			</div>
		</footer>
		{% endblock %}
	</div>
</body>
</html>