{% from 'includes/mobile-menu.njk' import mobileMenu %}

<!DOCTYPE html>
<html lang="nl">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=Edge" />
		
		<link rel="icon" type="image/x-icon" href="/originele-plannen/img/favicon.ico" />
		
		<title>{{pageTitle+' â€” ' if pageTitle}}{{PAGENAME_POSTFIX}}</title>

		<script>

		 var endDate1 = new Date('2018-10-31');
		 var endDateText1 = '31 oktober 2018';
		 var daysLeft1 = parseInt( ( endDate1.getTime() - Date.now() ) / ( 24 * 60 * 60 * 1000) ) + 1;

		 var endDate2 = new Date('2018-11-07');
		 var endDateText2 = '7 november 2018';
		 var daysLeft2 = parseInt( ( endDate2.getTime() - Date.now() ) / ( 24 * 60 * 60 * 1000) ) + 1;

		</script>
		
		<meta name="viewport" content="initial-scale=1">
		{% block head %}
			<link rel="stylesheet" type="text/css" media="all"   href="/originele-plannen/css/stemvan/all.css">
			<link rel="stylesheet" type="text/css" media="all"   href="/originele-plannen/css/westbegroot.css">
			<link rel="stylesheet" type="text/css" media="all"   href="/originele-plannen/css/westbegroot-original-ideas.css">
			<link rel="stylesheet" type="text/css" media="print" href="/originele-plannen/css/stemvan/print.css">
		{% endblock %}
	</head>
	<body class="preload">
		<div id="page">
			<header>
				<a href="/">
					<img src="/originele-plannen/img/andreas.svg" width="24" alt=""/>
					<div id="amsterdam">
						Gemeente<br>
						Amsterdam
					</div>
					<h1><span>{{SITENAME}}</span></h1>
				</a>
				<!--
						 <a href="javascript: alert('wat deze knop gaat doen is nog niet duidelijk')" class="page-button page-button-grey" target="_blank">
						 Wat kan ik nog meer doen in mijn buurt?
						 </a>
				-->
			</header>
			
			<nav id="mainMenu" role="navigation" class="menuBar">
				<div>
					<ul>
						<li class="{{'active' if activeMenu == 'home' or not activeMenu}}"><a href="/">Home</a></li>
						<li class="{{'active' if activeMenu == 'ideas'}}"><a href="/stemmen">Stemmen</a></li>
					</ul>

				</div>
			</nav>
			
			<div id="content" class="pageContent {{contentClass}}">
				{% for type,list in messages %}
					<div class="flashMessage {{type}}">
						{% if type == 'error' %}
							<h2>Er ging iets fout</h2>
							<ul>
								{% for message in list %}<li>{{message | safe}}{% endfor %}
							</ul>
						{% elif type == 'success' %}
							<h2>Gelukt!</h2>
							{% for message in list %}{{message | safe}}<br>{% endfor %}
						{% elif type == 'include' %}
							{% for file in list %}
								{% include file %}
							{% endfor %}
						{% else %}
							<h2>Informatie</h2>
							{% for message in list %}{{message | safe}}<br>{% endfor %}
						{% endif %}
						
						<a class="close"><img src="/originele-plannen/img/close.svg" alt="" title="Melding sluiten"></a>
					</div>
				{% endfor %}
				
				{% block content %}
					Standaard pagina.
				{% endblock %}
			</div>

			{% block howDoesItWork %}
			{% endblock %}

			{% block endDateBar %}
			{% endblock %}

			<div id="content2" class="pageContent {{contentClass}}">
				{% block content2 %}
				{% endblock %}
			</div>
			
			{#
			Extra page elements. E.g. used by idea.njk to render arguments which
			has an extra header element that spans the entire `#page` width.
			#}
			{% block page %}
				{# <div class="content">...</div> #}
			{% endblock %}

			<div id="content3" class="pageContent {{contentClass}}">
				{% block content3 %}
				{% endblock %}
			</div>

			{% block footer %}
				<footer>
					<div>
						<div>
							<h2>Over deze site</h2>
							<ul>
								<li><a href="/disclaimer">Disclaimer</a></li>
							</ul>
						</div>
						<div>
							<h2>Meer informatie</h2>
							<ul>
								<li><a href="/veelgestelde-vragen">Veelgestelde vragen</a></li>
							</ul>
						</div>
						<div>
							<h2>Contact</h2>
							<p>
								Heb je een vraag over dit project of de werking van deze site? Wij horen het graag!
							</p>
							<ul>
								<li><a href="mailto:{{EMAIL}}">Stuur een email</a></li>
							</ul>
						</div>
					</div>
				</footer>
			{% endblock %}

			{{ mobileMenu() }}

		</div>
		
		<script>
		 // Preload class is defined in `all.less` to disable all animations.
			 document.body.className = '';
		</script>
		<script>
		 function $( el, query ) {
			 query || (query = el, el = null);
			 return Array.prototype.slice.call(
				 (el || document).querySelectorAll(query), 0
			 );
		 }
		</script>
		<script>
		 // Flash messages
		 // --------------
						// Make close buttons interactive.
															(function() {
																var closeButtons = Array.prototype.slice.call(
																	document.querySelectorAll('#content > .flashMessage a:not([href])'), 0
																);
																closeButtons.forEach(function( a ) {
																	a.href = '';
																	a.addEventListener('click', function( event ) {
																		var message = a.parentNode;
																		message.parentNode.removeChild(message);
																		event.preventDefault();
																	});
																});
															})();
		</script>
		
		{% block scripts %}{% endblock %}
		
		{% if ENV == 'production' %}
			{% include 'includes/analytics.njk' %}
		{% endif %}
	</body>
</html>
