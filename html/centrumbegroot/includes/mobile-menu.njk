{% macro mobileMenu() %}
	<div id="mobile-menu" class="visible-xs">
		<a href="/#top" class="mobile-menu-item scroll-link"{% if (config.ideas.addNewIdeas == 'closed') %} style="width: 25%"{% endif %}>
			<img src="/img/westbegroot/mobiel-nav-home.svg" height="20" />
			Start
		</a>
		<a href="/#info" class="mobile-menu-item scroll-link"{% if (config.ideas.addNewIdeas == 'closed') %} style="width: 25%"{% endif %}>
