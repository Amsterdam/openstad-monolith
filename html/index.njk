{% extends './base.njk' %}
{% import './includes/secondary.njk' as sec %}

{% set contentClass = 'index' %}

{% block content %}
	<div id="banner">
		<div class="image"></div>
		<div class="text">
			<h2>Welkom op De Stem van West</h2>
			Dit is jouw online meeting point voor het indienen van voorstellen voor je buurt.
			Een nieuw plantsoen? Extra parkeerplekken of juist veel minder? Jij bedenkt het!
			Voer campagne voor je plan, verzamel zoveel mogelijk stemmen. Zorg dat je plan
			werkelijkheid wordt!
		</div>
	</div>
	
	<div class="primary">
		{{sec.newIdeaBubble()}}
		
		{# Syntax formatting because `div.tile` is `display: inline-block`. #}
		{% for article in articles
		%}<div class="tile">
			<div class="image"></div>
			<h3>{{article.title}}</h3>
			{{article.summary}}
			
			<a href="/article/{{article.id}}" class="readMore">Lees meer</a>
		</div>{%
		endfor %}
	</div>
	
	<div class="secondary">
		{{sec.newIdeaBubble()}}
		
		{{sec.highlightedIdeas(highlightedIdeas)}}
		
		{{sec.agenda(upcomingMeetings)}}
	</div>
{% endblock %}